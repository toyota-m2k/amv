<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.michael.video.v2.elements.AmvExoVideoPlayer
        android:id="@+id/tpv_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tpv_slider_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.michael.video.v2.elements.AmvTrimmingSliderPanel
        android:id="@+id/tpv_slider_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tpv_trimStartText"
        />

    <TextView
        android:id="@+id/tpv_trimStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tpv_playButton"
        app:layout_constraintStart_toStartOf="@+id/tpv_slider_panel"
        android:layout_marginTop="8dp"
        android:layout_marginStart="26dp"
        tools:text="00:00"
        />
    <TextView
        android:id="@+id/tpv_trimmedRangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tpv_playButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:text="00:00"
        />
    <TextView
        android:id="@+id/tpv_trimEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tpv_playButton"
        app:layout_constraintEnd_toEndOf="@+id/tpv_slider_panel"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        tools:text="99:99"
        />

    <ImageButton
        android:id="@+id/tpv_playButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/play"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_play"
        />


    <View
        android:id="@+id/tpv_blocking_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>