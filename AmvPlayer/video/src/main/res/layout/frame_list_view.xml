<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.michael.video.AmvHorzScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="false"
        >
        <LinearLayout
            android:id="@+id/imageList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <View
            android:id="@+id/leftTruncated"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/white"
            android:alpha="0.5"
            android:visibility="gone"
            />
        <View
            android:id="@+id/rightTruncated"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/white"
            android:alpha="0.5"
            android:visibility="gone"
            />
        <View
            android:id="@+id/leftTruncatedBar"
            android:layout_height="match_parent"
            android:layout_width="8dp"
            android:background="@color/trimming_sel"
            android:visibility="gone"
            />
        <View
            android:id="@+id/rightTruncatedBar"
            android:layout_height="match_parent"
            android:layout_width="8dp"
            android:background="@color/trimming_sel"
            android:visibility="gone"
            />

    </com.michael.video.AmvHorzScrollView>

    <View
        android:id="@+id/knob"
        android:layout_height="match_parent"
        android:layout_width="26dp"
        android:background="@drawable/ic_slider_knob_bg"
        />

</merge>
