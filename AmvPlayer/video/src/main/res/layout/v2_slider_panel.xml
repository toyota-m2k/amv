<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <Space
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:visibility="invisible"
        />
    <com.michael.video.v2.elements.AmvFrameListView
        android:id="@+id/sp_frameList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        app:trimmingMode="false"
        tools:visibility="visible"
        />
    <com.michael.video.v2.elements.AmvSliderView
        android:id="@+id/sp_slider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:trimmingMode="false"
        app:saveFromParent="false"
        app:showThumbBg="true"
        android:background="@color/transparent"
        />

</FrameLayout>