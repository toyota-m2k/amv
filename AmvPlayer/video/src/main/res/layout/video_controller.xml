<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="params" type="com.michael.video.AmvVideoController.BindingParams"/>
        <variable name="handlers" type="com.michael.video.AmvVideoController"/>
        <import type="android.view.View"/>
        <import type="com.michael.video.R"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:background="@color/button_face"
            >
            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/ic_play"
                app:srcCompat="@{params.isPlaying ? R.drawable.ic_pause : R.drawable.ic_play}"
                android:contentDescription="@{params.isPlaying ? @string/stop : @string/play}"
                android:onClick="@{handlers.onPlayClicked}"
                android:background="?android:selectableItemBackground"
                />
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_back"
                android:contentDescription="@string/back"
                android:alpha="@{params.hasPrev ? 255 : 80 }"
                android:clickable="@{params.hasPrev}"
                android:background="?android:selectableItemBackground"
                />

            <ImageButton
                android:id="@+id/forwardButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_forward"
                android:contentDescription="@string/next"
                android:alpha="@{params.hasNext ? 255 : 80 }"
                android:clickable="@{params.hasNext}"
                android:background="?android:selectableItemBackground"
                />

            <ImageButton
                android:id="@+id/markButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_add_marker"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/add_marker" />
            <ImageButton
                android:id="@+id/pinpButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_pinp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/pinp" />
            <ImageButton
                android:id="@+id/fullscreenButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_expand"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/fullscreen" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/showFramesButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_film"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/fullscreen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</layout>