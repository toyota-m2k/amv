<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="params" type="com.michael.video.AmvVideoController.BindingParams"/>
        <variable name="handlers" type="com.michael.video.AmvVideoController"/>
        <import type="android.view.View"/>
        <import type="com.michael.video.R"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/controllerRoot"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:minWidth="@{params.minControllerWidth}"
        android:background="@color/button_face"
        >

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:background="@color/button_face"
            >
            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/ic_play"
                app:srcCompat="@{params.isPlaying ? R.drawable.ic_pause : R.drawable.ic_play}"
                android:contentDescription="@{params.isPlaying ? @string/stop : @string/play}"
                android:onClick="@{handlers::onPlayClicked}"
                android:alpha="@{params.isReady ? 255 : 80 }"
                android:clickable="@{params.isReady}"
                android:background="?android:selectableItemBackground"
                />
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_back"
                android:contentDescription="@string/back"
                android:background="?android:selectableItemBackground"
                android:onClick="@{handlers.onPrevMarker}"
                />

            <ImageButton
                android:id="@+id/forwardButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_forward"
                android:contentDescription="@string/next"
                android:background="?android:selectableItemBackground"
                android:onClick="@{handlers.onNextMarker}"
                />

            <ImageButton
                android:id="@+id/markButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_add_marker"
                android:alpha="@{params.isReadOnly ? 255 : 80 }"
                android:clickable="@{params.isReadOnly}"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/add_marker"
                android:onClick="@{handlers.onAddMarker}"
                />
            <ImageButton
                android:id="@+id/pinpButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_pinp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/pinp" />
            <ImageButton
                android:id="@+id/fullscreenButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_expand"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/fullscreen" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/showFramesButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_frames"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/fullscreen"
            android:onClick="@{handlers::onShowFramesClick}"
            android:tint="@color/frame_list_button_color"
            android:selected="@{params.showingFrames}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.michael.video.AmvMarkerView
            android:id="@+id/markerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/marker_view_bg"
            app:leftInert="13dp"
            app:rightInert="13dp"
            app:saveFromParent="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttons"
            />
        <com.michael.video.AmvSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trimmingMode="false"
            app:showThumbBg="@{params.showingFrames}"
            app:saveFromParent="false"
            android:background="@color/controller_bg"
            app:onCurrentPositionChanged="@{handlers::onCurrentPositionChanged}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/markerView"
            />

        <!--<SeekBar-->
            <!--android:id="@+id/slider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:progressDrawable="@drawable/slider_bg"-->
            <!--android:thumb="@drawable/ic_slider_knob"-->
            <!--android:onProgressChanged="@{handlers.onSeekBarValueChanged}"-->
            <!--android:onStartTrackingTouch="@{handlers.onSeekBarStartTracking}"-->
            <!--android:onStopTrackingTouch="@{handlers.onSeekBarEndTracking}"-->
            <!--android:max="1000"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintTop_toBottomOf="@id/buttons"-->
            <!--/>-->
        <com.michael.video.AmvFrameListView
            android:id="@+id/frameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{params.showingFrames ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slider"
            />
        <TextView
            tools:text="00:00/00:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/controller_bg"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@{params.counterText}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frameList"
            />


    </android.support.constraint.ConstraintLayout>
</layout>