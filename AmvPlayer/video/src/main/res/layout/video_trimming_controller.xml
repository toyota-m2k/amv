<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_face">

    <com.michael.video.AmvFrameListView
        android:id="@+id/frameList"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:trimmingMode="true"
        tools:layout_height="50dp"
        />

    <com.michael.video.AmvSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:trimmingMode="true"
        app:railColor="@color/trimming_sel"
        />


    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/play"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/frameList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_play"
        android:alpha="0.4"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/trimStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameList"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="26dp"
        />
    <TextView
        android:id="@+id/trimEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameList"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        />

</android.support.constraint.ConstraintLayout>