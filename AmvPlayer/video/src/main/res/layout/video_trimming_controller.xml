<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/vtc_root"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vtc_sliderGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_width="300dp"
        >

        <com.michael.video.AmvFrameListView
            android:id="@+id/vtc_frameList"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="44dp"
            app:extentLeft="26dp"
            app:extentRight="26dp"
            app:trimmingMode="true"
            />

        <com.michael.video.AmvSlider
            android:id="@+id/vtc_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trimmingMode="true"
            app:railColor="@color/trimming_sel"
            />

    </FrameLayout>

    <ImageButton
        android:id="@+id/vtc_playButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/play"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/vtc_sliderGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_play"
        android:alpha="0.4"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/vtc_trimStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vtc_sliderGroup"
        app:layout_constraintStart_toStartOf="@+id/vtc_sliderGroup"
        android:layout_marginTop="8dp"
        android:layout_marginStart="26dp"
        tools:text="00:00"
        />
    <TextView
        android:id="@+id/vtc_trimEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vtc_sliderGroup"
        app:layout_constraintEnd_toEndOf="@+id/vtc_sliderGroup"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        tools:text="99:99"
        />

</android.support.constraint.ConstraintLayout>
