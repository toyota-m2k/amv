<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <!-- GroupView.minWidth が効かないので、最小幅を持ったビューをつっかえ棒として置いておく -->
    <Space
        android:id="@+id/min_width_keeper"
        android:layout_width="320dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.michael.video.v2.elements.AmvExoVideoPlayer
        android:id="@+id/evp_videoPlayer"
        android:layout_width="320dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/evp_videoController"
        />
    <FrameLayout
        android:id="@+id/evp_pinp_alternative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/evp_videoPlayer"
        app:layout_constraintBottom_toBottomOf="@id/evp_videoPlayer"
        app:layout_constraintStart_toStartOf="@id/evp_videoPlayer"
        app:layout_constraintEnd_toEndOf="@id/evp_videoPlayer"
        android:visibility="gone"
        android:background="@color/black_overlay"
        tools:visibility="visible"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pinp"
            />
    </FrameLayout>
    <com.michael.video.v2.elements.AmvVideoController
        android:id="@+id/evp_videoController"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/min_width_keeper"
        app:layout_constraintTop_toBottomOf="@+id/evp_videoPlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>